#!/bin/sh
#|-*- mode:lisp -*-|#
#|
exec ros -Q -- $0 "$@"
|#
(progn ;;init forms
  (ros:ensure-asdf)
  #+quicklisp(ql:quickload '() :silent t)
  )

(defpackage :script.fact
  (:use :cl))
(in-package :ros.script.fact)

(defun fact (n)
  (if (zerop n)
      1
      (* n (fact (1- n)))))

(defun main (&rest argv)
  (declare (ignorable argv))
  (format t "~&Factorial ~D = ~D~%" n (fact (parse-integer n))))


